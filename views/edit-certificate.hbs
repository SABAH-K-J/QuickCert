<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quick-Cert | Edit Certificate</title>
    <link rel="stylesheet" href="/stylesheets/editstyles.css" />
  </head>
  <body>
    <div class="container">
      <h1>Edit Certificate Details</h1>
      <form action="/preview-certificates/fix" method="POST">
        <input type="hidden" name="oldName" value="{{certificateName}}" />
        <label for="newName">New Name</label>
        <input
          type="text"
          id="newName"
          name="newName"
          value="{{certificateName}}"
          placeholder="Enter name"
        />
        <button type="submit">Update Certificate</button>
      </form>
    </div>
  </body>
</html>